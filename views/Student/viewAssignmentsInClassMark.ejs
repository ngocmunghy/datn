<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/student_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <!-- Header -->
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                style="height: 100px; background-size: cover; background-position: center top;">
                <!-- Header container -->
            </div>
            <!-- Page content -->
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Assignment Management</h3>
                                        <%- include('../Includes/messages') %>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="heading-small text-muted mb-4">Class ID: <%=classData.class_id %></h6>
                                <h6 class="heading-small text-muted mb-4">Teacher: <%=teacher.st_name %></h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label">Assignments</label>
                                                <div class="table-responsive">
                                                    <table class="table" style="width: 100%; table-layout: fixed;">
                                                        <thead class="thead-dark">
                                                            <tr>
                                                                <th scope="row" style="width:10%;">#</th>
                                                                <th scope="col" style="text-overflow: ellipsis;
                                                                white-space: nowrap;
                                                                overflow: hidden;
                                                                width:30%;">ASSIGNMENT</th>
                                                                <th scope="col" style="width: 25%;">Deadline</th>
                                                                <th scope="col" style="width: 15%;"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for(let i=0; i < assignments.length; i++) { %>
                                                                
                                                                    <tr>
                                                                        <th scope="row">
                                                                            <%= i + 1 %>
                                                                        </th>
                                                                        <td style="text-overflow: ellipsis;
                                                                        white-space: nowrap;
                                                                        overflow: hidden;">
                                                                            <%=assignments[i].name %>
                                                                        </td>
                                                                        <td><%=assignments[i].deadline %></td>
                                                                        
                                                                        <td>
                                                                            
                                                                            <a href="/student/mark/assignment/<%=assignments[i].asg_id%>" class="btn btn-sm btn-primary" id = "ok">
                                                                                <i class="fa fa-eye"> View score</i>
                                                                            </a>
                                                                            
                                                                        </td>
                                                                        

                                                                    </tr>
                                                               
                                                            <% } %>
                                                        </tbody>

                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>




    </main>
</section>


<%- include('../Includes/staff_end.ejs') %>