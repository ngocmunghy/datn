<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <!-- Header -->
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                style="height: 100px; background-size: cover; background-position: center top;">
                <!-- Header container -->
            </div>
            <!-- Page content -->
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h1 class="mb-0">Class ID: <%=classId %></h3>
                                        <%- include('../Includes/messages') %>
                                    </div>

                                    <div class="col-4 text-right">
                                        <a href="/staff/class/<%=classId %>/addChapter" class="btn btn-sm btn-primary">Add chapter</a>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body">

                                <% 
                                    for (let i = 0; i < chapterDataArray.length; i++) { %>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-8">
                                                    <h3 class="text-muted mb-4"> Chapter <%= (i + 1) %></h3>
                                                </div>
                                                
                                                <div class="col-sm-4 text-right">
                                                    <a href="/staff/class/<%=classId %>/editChapter/<%=chapterDataArray[i].chapter_id %>" class="btn btn-sm btn-primary">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="/staff/class/<%=classId %>/deleteChapter/<%=chapterDataArray[i].chapter_id %>" class="btn btn-sm btn-primary">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                    
                                                </div>
                                                
                                            </div>

                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item row align-items-center">
                                                    
                                                    <a href="/staff/class-info/class/<%=classId%>/<%=chapterDataArray[i].chapter_id %>">
                                                        <img src="/images/pdf-24.png">
                                                        <span><%=chapterDataArray[i].chapter_name %></span>
                                                    </a>
                                                   
                                                    
                                                </li>
                                            </ul>
                                        </div>
                                        <hr pt-4>
                                    <% }
                                %>

                                
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>




    </main>
</section>

