<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>

<section id="content-wrapper">
    <main role="main" class="pt-5 main">

        <div class="main-content">
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                style="height: 100px; background-size: cover; background-position: center top;">
            </div>
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Class <%=classData.class_id %></h3>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="heading-small text-muted mb-4">Fill chapter information</h6>
                                <form action="/staff/class/<%=classData.class_id %>/editChapter/<%=chapterData.chapter_id %>" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label class="form-control-label" for="chapter-name">
                                            Name
                                        </label>
                                        <input type="text" id="chapter-name" name="chapterName"
                                                                class="form-control form-control-alternative"
                                                                value="<%=chapterData.chapter_name %>" required>
                                    </div>
                                    <hr class="my-4">
                                    <div class="form-group">
                                        <label class="form-control-label" for="chapter-description">
                                            Description
                                        </label>
                                        <input type="text" id="chapter-description" name="chapterDescription"
                                                                class="form-control form-control-alternative"
                                                                value="<%=chapterData.chapter_description %>" required>
                                    </div>
                                    <hr class="my-4">
                                    <div class="form-group">
                                        <label class="form-control-label" for="chapter-pdf">
                                            Upload PDF
                                        </label>
                                        <input type="file" id="chapter-pdf" name="chapterPdf" accept="application/pdf"
                                                                class="form-control form-control-alternative" required>
                                    </div>
                                    <hr class="my-4">
                                    
                                    <button type="submit" class="btn btn-primary btn-block">Edit
                                        Chapter</button>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>




    </main>
</section>



<%- include('../Includes/staff_end.ejs') %>