<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>


<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <!-- Header -->
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                style="height: 100px; background-size: cover; background-position: center top;">
                <!-- Header container -->
            </div>
            <!-- Page content -->
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Question Management</h3>
                                        <%- include('../Includes/messages') %>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="/staff/class/<%=classData.class_id %>/addQuestion" class="btn btn-sm btn-primary">Add question</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="heading-small text-muted mb-4">Class ID: <%=classData.class_id %></h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label">Question Bank</label>
                                                <div class="table-responsive">
                                                    <table class="table" style="width: 100%; table-layout: fixed;">
                                                        <thead class="thead-dark">
                                                            <tr>
                                                                <th scope="row" style="width:10%;">#</th>
                                                                <th scope="col" style="text-overflow: ellipsis;
                                                                white-space: nowrap;
                                                                overflow: hidden;
                                                                width:60%;">QUESTION</th>
                                                                <th scope="col"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for(let i=0; i < questions.length; i++) { %>
                                                            <tr>
                                                                <th scope="row">
                                                                    <%= i + 1 %>
                                                                </th>
                                                                <td style="text-overflow: ellipsis;
                                                                white-space: nowrap;
                                                                overflow: hidden;">
                                                                    <%=questions[i].question %>
                                                                </td>
                                                                <td>
                                                                    <a href="/staff/question-management/class/<%=classData.class_id %>/viewQuestion/<%=questions[i].q_id%>" class="btn btn-sm btn-primary">
                                                                        <i class="fa fa-eye"></i>
                                                                    </a>
                                                                    <a href="/staff/question-management/class/<%=classData.class_id %>/editQuestion/<%=questions[i].q_id%>" class="btn btn-sm btn-primary">
                                                                        <i class="fa fa-edit"></i>
                                                                    </a>
                                                                    <a href="/staff/question-management/class/<%=classData.class_id %>/deleteQuestion/<%=questions[i].q_id%>" class="btn btn-sm btn-primary">
                                                                        <i class="fa fa-trash"></i>
                                                                    </a>
                                                                </td>
                                                                

                                                            </tr>
                                                            <% } %>
                                                        </tbody>

                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>




    </main>
</section>


<%- include('../Includes/staff_end.ejs') %>